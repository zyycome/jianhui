	<!-- 配置同步任务 -->
	<bean name="task221" class="org.springframework.scheduling.quartz.JobDetailBean">
	   <property name="jobClass" value="zyycome.task.Task22" />
	   <property name="jobDataAsMap">   
            <map>   
               <entry key="db1service" value-ref="db1service"></entry> 
               <entry key="configservice" value-ref="configservice"></entry>
               <entry key="dataservice" value-ref="dataservice"></entry>
               <entry key="taskname" value="task221"></entry> 
            </map>   
        </property>
	</bean>
	
	 <bean id="task221crontrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
	   <property name="jobDetail" ref="task221" />
	   <property name="cronExpression" value="0/10 * * * * ?" />
	 </bean>
	 
	 <bean class="org.springframework.scheduling.quartz.SchedulerFactoryBean">
	   <property name="triggers">
	     <list>	
	       <ref bean="task221crontrigger" />	      
	    </list>
	  </property>
	</bean>  	

